<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" styleClass="HBox" stylesheets="@style.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.lionid.clientv2.controller.AddPublisherController">
   <children>
      <Label layoutX="14.0" layoutY="14.0" text="Название">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      <TextField fx:id="textTitle" layoutX="100.0" layoutY="14.0" prefHeight="25.0" prefWidth="200.0" promptText="название издательства" styleClass="textField" stylesheets="@style.css" />
      <ListView fx:id="dataList" layoutX="336.0" layoutY="14.0" onMouseClicked="#onMouseClickDataList" prefHeight="325.0" prefWidth="250.0" styleClass="listView" />
      <Label layoutX="14.0" layoutY="46.0" text="Автор">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      <ComboBox fx:id="ComboBoxCity" layoutX="100.0" layoutY="46.0" prefHeight="25.0" prefWidth="200.0" styleClass="comboBox" stylesheets="@style.css" />
      <ButtonBar layoutY="350.0" prefHeight="50.0" prefWidth="600.0" styleClass="buttonBar" stylesheets="@style.css">
         <buttons>
            <Button fx:id="addButton" mnemonicParsing="false" onAction="#addAction" text="Добавить" />
            <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#deleteAction" text="Удалить" />
            <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#cancelAction" onMouseClicked="#editModeHandler" text="Отмена" />
         </buttons>
      </ButtonBar>
   </children>
</AnchorPane>
